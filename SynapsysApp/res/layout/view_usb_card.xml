<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/usb_card_shape_selector" >

    <ImageView
        android:id="@+id/usb_card_background_image"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="15dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/usb_card_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/usb_card_background_image"
        android:background="#80dbdbdb"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/usb_card_description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usb_card_background_image" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usb_card_description_text" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TextView
                style="@style/usb_connection_card_row"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:text="@string/usb_card_connection_title" />

            <TextView
                android:id="@+id/usb_card_connection_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TextView
                style="@style/usb_connection_card_row"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:text="@string/usb_card_direction_title" />

            <TextView
                android:id="@+id/usb_card_direction_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
        </TableRow>
        
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TextView
                style="@style/usb_connection_card_row"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:text="@string/usb_card_displayname_title" />

            <TextView
                android:id="@+id/usb_card_displayname_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
    	</TableRow>
    	 
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" >

            <TextView
                style="@style/usb_connection_card_row"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="2"
                android:text="@string/usb_card_displayaddr_title" />

            <TextView
                android:id="@+id/usb_card_displayaddr_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3" />
    	</TableRow>
    </TableLayout>

</RelativeLayout>